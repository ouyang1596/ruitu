<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rt_bg_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/top_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/public_top_alert" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人账户："
                        android:textColor="@color/rt_blue"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="羊羊羊"
                        android:textColor="@color/rt_blue"
                        android:textSize="@dimen/text_size_12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@drawable/account_next" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    style="@style/set_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_style1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="包车方式：" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RadioButton
                            style="@style/rb_style"
                            android:text="单程" />

                        <RadioButton
                            style="@style/rb_style"
                            android:layout_marginLeft="12dp"
                            android:text="往返" />

                        <RadioButton
                            style="@style/rb_style"
                            android:layout_marginLeft="12dp"
                            android:text="包天" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    style="@style/set_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_style1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总人数：" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/text_style2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请设置包车人数" />
                </LinearLayout>

                <LinearLayout
                    style="@style/set_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_style1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车辆数：" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imgv_add"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/add" />

                        <EditText
                            android:id="@+id/et_car_count"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/bg"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="1"
                            android:textSize="@dimen/text_size_10" />

                        <ImageView
                            android:id="@+id/imgv_sub"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/sub" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_start_time"
                    style="@style/set_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_style1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出发时间：" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txtv_start_time"
                        style="@style/text_style2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请设置出发时间" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_start_place"
                    style="@style/set_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_style1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出发地点：" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/text_style2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请选择出发地点" />
                </LinearLayout>

                <LinearLayout
                    style="@style/set_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_style1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="目的地：" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/text_style2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请选择目的地" />
                </LinearLayout>

                <LinearLayout
                    style="@style/set_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/text_style1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="返程时间：" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/text_style2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请设置返程时间" />
                </LinearLayout>

                <LinearLayout
                    style="@style/set_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/text_style1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="选择车型：" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_car_type"
                        android:layout_width="match_parent"
                        android:layout_height="150dp" >
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/rt_yellow4"
                    android:text="下一步"
                    android:textColor="@color/rt_white"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_set_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/rt_white"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="出发时间"
                android:textColor="@color/rt_black_one"
                android:textSize="@dimen/text_size_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:paddingTop="16dp" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <DatePicker
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/rt_white" />

                <TimePicker
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/rt_white" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/rt_line_between" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtv_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/rt_black_three"
                    android:textSize="@dimen/text_size_14" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/rt_line_between" />

                <TextView
                    android:id="@+id/txtv_confirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/rt_black_three"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>