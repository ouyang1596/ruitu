<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rt_bg_gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/public_top_alert" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入您注册时填写的手机号，我们会给您发送一天验证短信，请注意查收" />

    <EditText
        android:id="@+id/et_mobile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@color/rt_white"
        android:drawableLeft="@drawable/et_mobile"
        android:drawablePadding="18dp"
        android:hint="手机号码"
        android:paddingLeft="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/rt_line_between" />

    <RelativeLayout
        android:id="@+id/ll_identyfi_code"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/rt_white"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <EditText
            android:id="@+id/et_identify_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/rt_white"
            android:drawableLeft="@drawable/identifying_code"
            android:drawablePadding="18dp"
            android:hint="验证码"
            android:paddingRight="70dp"
            android:textSize="@dimen/text_size_16" />

        <Button
            android:id="@+id/btn_resend"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/new_orange_radius_bg"
            android:text="发送"
            android:textColor="@drawable/text_color_selector"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/rt_line_between" />

    <EditText
        android:id="@+id/et_new_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/rt_white"
        android:drawableLeft="@drawable/et_password"
        android:drawablePadding="18dp"
        android:hint="新密码"
        android:paddingLeft="16dp" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="90dp"
        android:background="@color/rt_yellow4"
        android:text="确定"
        android:textColor="@color/rt_white"
        android:textSize="@dimen/text_size_16" />

</LinearLayout>